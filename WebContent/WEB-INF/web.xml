<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>work</display-name>
	<welcome-file-list>
		<welcome-file>home.jsp</welcome-file>
		<welcome-file>test.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>clientController</servlet-name>
		<servlet-class>controller.work.clientController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>clientController</servlet-name>
		<url-pattern>/clients</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AccueilController</servlet-name>
		<servlet-class>controller.work.AccueilController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AccueilController</servlet-name>
		<url-pattern>/accueil</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>chambreController</servlet-name>
		<servlet-class>controller.work.chambreController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>chambreController</servlet-name>
		<url-pattern>/chambre</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ReservationController</servlet-name>
		<servlet-class>controller.work.ReservationController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ReservationController</servlet-name>
		<url-pattern>/res</url-pattern>
	</servlet-mapping>
</web-app>